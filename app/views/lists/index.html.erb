<div class="main d-flex flex-column justify-content-center align-items-center">
  <h1>These are all the lists</h1>

  <%= link_to "Add a list", new_list_path, class: "btn btn-primary rounded-pill" %>

  <div class="container py-4">
    <div class="row g-3">

      <% @lists.each do |list| %>

        <div class="col-md-4">

          <%= render "listcard", list: list %>

        </div>

      <% end %>

    <ul>
    </div>
  </div>


</div>
