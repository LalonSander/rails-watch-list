<%= form_with url: list_search_items_path(@list), method: :get, local: true, class: "d-flex mb-4" do |f| %>
  <%= f.text_field :query, placeholder: "Search for a title", class: "form-control me-2" %>
  <%= f.select :type, [["Movie", "movie"], ["Series", "tv"]], {}, class: "form-select me-2" %>
  <%= f.submit "Search", class: "btn btn-primary" %>
<% end %>
