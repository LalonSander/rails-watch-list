<!-- app/views/lists/_search_form.html.erb -->
<%= form_with url: list_search_movies_path(@list), method: :get, local: true, class: "d-flex mb-4" do |f| %>
  <%= f.text_field :query, placeholder: "Search for a movie", class: "form-control me-2" %>
  <%= f.submit "Search", class: "btn btn-primary" %>
<% end %>
