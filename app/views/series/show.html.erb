<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-10">

      <div class="card shadow-sm p-3">
        <div class="row g-0">

          <div class="col-md-4">
            <img
              src="<%= @series.poster_url %>"
              onerror="this.onerror=null; this.src='https://placehold.co/300x450?text=No+Poster+Available&font=roboto';"
              class="img-fluid rounded"
              alt="<%= @series.title %>">
          </div>

          <div class="col-md-8">
            <div class="card-body">
              <h2 class="card-title"><%= @series.title %></h2>
              <p class="card-text"><%= @series.overview.presence || "No overview available." %></p>

              <% if @series.seasons.any? %>
                <h5 class="mt-3">Seasons:</h5>
                <div class="d-flex flex-wrap">
                  <% @series.seasons.each do |season| %>
                    <%= link_to "Season #{season.season_number}", series_season_path(@series, season, list_id: params[:list_id]), class: "btn btn-outline-primary m-1" %>
                  <% end %>
                </div>
              <% else %>
                <p class="text-muted mt-3">No seasons yet.</p>
              <% end %>

              <%= link_to "Back to List", (params[:list_id] ? list_path(params[:list_id]) : lists_path), class: "btn btn-secondary mt-4" %>
            </div>
          </div>

        </div>
      </div>

    </div>
  </div>
</div>
