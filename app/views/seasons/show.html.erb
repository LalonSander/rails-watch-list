<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-10">

      <div class="card shadow-sm p-3">
        <div class="row g-0">

          <div class="col-md-12">
            <div class="card-body">
              <h2 class="card-title"><%= @season.series.title %> - Season <%= @season.season_number %></h2>

              <% if @season.episodes.any? %>
                <h5 class="mt-3">Episodes:</h5>
                <div class="d-flex flex-wrap">
                  <% @season.episodes.each do |episode| %>
                    <%= link_to series_season_episode_path(@season.series, @season, episode, list_id: params[:list_id]), class: "btn btn-outline-primary d-flex align-items-center mb-3 p-3 w-100 text-start" do %>
                      <%= image_tag episode.still_url, alt: episode.title, class: "me-3", style: "height: 100px; width: auto; object-fit: cover;" %>
                      <div>
                        <h5 class="mb-1">Episode <%= episode.episode_number %> - <%= episode.title %></h5>
                      </div>
                    <% end %>
                  <% end %>
                </div>
              <% else %>
                <p class="text-muted mt-3">No episodes yet.</p>
              <% end %>

              <%= link_to "Back to Series", series_path(@season.series, list_id: params[:list_id]), class: "btn btn-secondary mt-3" %>
            </div>
          </div>

        </div>
      </div>

    </div>
  </div>
</div>
